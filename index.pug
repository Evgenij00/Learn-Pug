extends layout/main

block title
    | Главная страница

block content
    mixin list
        ul
            li 1
            li lorem
            li 3
    +list


    mixin name(name)
        li(class = 'test '+name)= name
    ul
        +name('name1')
        +name('name2')
        +name('name3')


    mixin news(title)
        .news-wrap
            span.news-title= title
            .news-text

            if block
                block
            else
                p новость пустая
    
    +news('Новость без текста')
    +news('Новость с текстом')
        p Lorem ipsum dolor, sit amet consectetur adipisicing elit. Labore, corporis!


    mixin link(href, name)
        a(href= href)= name

    +link('yandex.ru', 'Яндекс')
    +link('google.com', 'Google')
    +link('#', 'Пустая ссылка')


    mixin list(classname, ...items)
        ul(class= '' + classname)
            each item in items
                li(class = 'social-link social-link__'+item)=item

    +list('list1', 'vk', 'fb', 'tw', 'inst')
    +list('list2', 'vk', 'fb', 'tw', 'inst')
    +list('list3', 'vk', 'fb', 'tw', 'inst')